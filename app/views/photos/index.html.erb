<h1>Listing Photos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Tag line for photo</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag(photo.image, :width => 200) %></td>
        <td><%= photo.tag_line_for_photo %></td>
        <td><%= photo.created_at %></td>
        <td><%= link_to 'Show', photo, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%#= link_to 'New Photo', new_photo_path, :class => 'btn btn-primary' %>
<%= link_to 'Back', albums_path, :class => 'btn btn-primary' %>

</center>
