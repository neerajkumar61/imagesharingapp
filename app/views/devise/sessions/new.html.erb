<div >
  <h2><center>Log In</center></h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'form-control' %>
      </div>
      <%=f.error_span(:email) %>
    </div><br><br><br><br>

    <div class="form-group">
      <%= f.label :password, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control' %>
      </div>
      <%=f.error_span(:password) %>
    </div><br><br><br><br>

    <center>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    </center><br>
    <center><%= f.submit "Sign in",:class=>'btn btn-primary' %><%= render "devise/shared/links" %></center><br><br>
  <% end %>
  

</div>