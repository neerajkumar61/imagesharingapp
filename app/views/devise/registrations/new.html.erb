<div >
  <h2><center>Sign up</center></h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'form-control' %>
      </div>
      <%=f.error_span(:email) %>
    </div><br><br><br><br>

    <div class="form-group">
      <%= f.label :password, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control' %>
      </div>
      <%=f.error_span(:password) %>
    </div><br><br><br><br>

    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation', :class => 'form-control' %>
      </div>
      <%=f.error_span(:password_confirmation) %>
    </div><br><br><br><br>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <center><%= f.submit "Sign up", :class => 'btn btn-primary' %></center>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>
